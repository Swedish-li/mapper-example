<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lrs.example.mapper.EmployeeMapper">
	<resultMap type="Employee" id="employeeMap">
		<id column="empno" property="id" />
		<result column="ename" property="name" />
		<result column="job" property="job" />
		<result column="mgr" property="mgr" />
		<result column="hiredate" property="hiredate" />
		<result column="sal" property="sal" />
		<result column="comm" property="comm" />
		<result column="deptno" property="deptNo" />
	</resultMap>
	<!-- include的property子元素无效 -->
	<select id="query" resultMap="employeeMap">
		<bind name="alias" value="'tb'" />
		<bind name="querySql"
			value="'SELECT empno,ename,job,mgr,hiredate,sal,comm,deptno FROM emp ORDER BY sal'" />
		<include refid="pageQuerySql" />
	</select>
	
	<sql id="pageQuerySql">
		<include refid="startPageSql" />
		${querySql}
		<include refid="endPageSql" />
	</sql>

	<sql id="startPageSql">
		SELECT * FROM(
		SELECT ${alias}.*,ROWNUM rn
		FROM
		(
	</sql>

	<sql id="endPageSql">
		<![CDATA[
			) ${alias}
		        WHERE ROWNUM<=#{end}
				)  TL 
			WHERE rn >=#{start}
		]]>
	</sql>

	<select id="count" resultType="int">
		SELECT COUNT(*) FROM emp
	</select>
</mapper>